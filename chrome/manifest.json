{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://facebook.com/*",
        "http://*.facebook.com/*",
        "https://facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "css": [
        "styles/contentstyles.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
